<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppRoosterOficial"
        tools:targetApi="31">

        <!-- Entrada principal de la aplicación -->
        <activity
            android:name=".FirstActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" /> <!-- Configurar según necesidad de ser accedida por otras apps -->

        <activity
            android:name=".PrincipalActivity"
            android:exported="false" /> <!-- Usualmente no se expone si se accede solo internamente -->

        <activity
            android:name="com.example.roosterapp.RegisterActivity"
            android:exported="false" /> <!-- Usualmente no se expone si se accede solo internamente -->

    </application>

</manifest>

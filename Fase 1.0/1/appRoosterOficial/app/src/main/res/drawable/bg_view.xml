<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo completo con color de base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DFFFFF00"/> <!-- Color del fondo de la pantalla completa -->
        </shape>
    </item>
    <!-- Fondo superior decorativo con efecto curvado simulado -->
    <item android:height="1000dp" android:gravity="top">
        <shape android:shape="rectangle">
            <solid android:color="#F7090808"/> <!-- Color del fondo principal -->
            <corners android:bottomRightRadius="360dp" android:bottomLeftRadius="360dp"/>
        </shape>
    </item>
</layer-list>
